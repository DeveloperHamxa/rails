
<h1 class="text-center">Welcome to Orbiqon Users</h1>
<div class="text-center"><p style="color: green"><%= notice %></p></div>

<div id="users">
  <% @users.each do |user| %>
    <%= render user %>
    <p>
     <% if logged_in? %>
    <div class="text-center">
      <%= link_to "Show this user", user , class: "btn btn-outline-dark" %>
      </div>
    </p>
 
</div>
<% else %>
<div class="text-center">
<%= link_to "New user", new_user_path, class: "btn btn-outline-dark"  %>
<div>
<% end %>
 <% end %>
<%= will_paginate %>
</div>
</div>